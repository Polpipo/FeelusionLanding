---
import { Image } from "astro:assets";
import ContentSection from "~/components/content-section.astro";
import SergioBegueria from "../assets/sergioBegueria.jpg";
import Juan from "../assets/juan.jpg";
import DavidTuru from "../assets/davidTuru.jpg";
import VideoEventoTengoUnPlan from "../assets/eventoTengoUnPlan.mp4";
//import VideoEventoDavidTuru from "../assets/eventoDavidTuru.mp4";
import TestimonioSergio from "../assets/testimonioSergio.mp4";
---

<ContentSection title="Nuestros eventos" id="testimonios">
  <!--<Fragment slot="lead">
    Astro comes <span class="text-primary">batteries included</span>. It takes
    the best parts of
    <span class="text-primary">state-of-the-art</span>
     tools and adds its own <span class="text-primary">innovations</span>.
  </Fragment>-->
  <div class="md:h-screen h-full w-full text-center">
    <h3
      class="text-center font-extrabold text-3xl hover:scale-110 duration-300"
    >
      <span class="text-primary">TENGO UN</span> PLAN
    </h3>
    <div class="h-full w-full grid md:grid-cols-2 my-8 md:my-0">
      <div class="relative">
        <div class="grid md:grid-cols-2 md:h-4/5 py-16 md:py-0">
          <div class="md:relative flex md:block">
            <div
              class="md:absolute w-2/3 inset-0 m-auto md:left-[150px] h-fit rounded-xl -rotate-12 hover:z-10 hover:rotate-0 hover:shadow-[0px_0px_15px_5px_rgba(255,255,255,0.5)] hover:scale-110 duration-300"
            >
              <Image src={Juan} alt="Juan Domline" class="rounded-xl" />
              <p
                class="text-center text-xl font-extrabold absolute top-10 mx-auto w-full drop-shadow-[0_35px_35px_rgba(0,0,0,0.25)]"
              >
                JUAN DOMLINE
              </p>
            </div>
          </div>
          <div class="md:relative flex md:block">
            <div
              class="md:absolute w-2/3 inset-0 m-auto rounded-xl md:right-[80px] h-fit rotate-12 hover:z-10 hover:rotate-0 hover:shadow-[0px_0px_15px_5px_rgba(255,255,255,0.5)] hover:scale-110 duration-300"
            >
              <Image
                src={SergioBegueria}
                alt="Sergio Begueria"
                class="rounded-xl"
              />
              <p
                class="text-center text-xl font-extrabold absolute top-10 mx-auto w-full drop-shadow-[0_35px_35px_rgba(0,0,0,0.25)]"
              >
                SERGIO BEGUERIA
              </p>
            </div>
          </div>
        </div>
        <button
          class="rounded-full px-4 h-16 font-bold before:ease relative overflow-hidden text-white shadow-[1px_3px_5px_0px_rgba(255,255,255,0.5)] hover:shadow-[0px_0px_10px_2px_rgba(255,255,255,0.5)] transition-all before:absolute before:right-0 before:top-0 before:h-16 before:w-4 before:translate-x-12 before:rotate-6 before:bg-white before:opacity-10 before:duration-700 hover:shadow-yellow-500 hover:before:-translate-x-72 bg-gradient-to-br from-yellow-500 to-orange-700 hover:scale-110"
          >TRABAJA CON NOSOTROS</button
        >
      </div>

      <div class="md:relative order-2">
        <video
          class="md:h-4/5 md:absolute mt-20 md:m-auto inset-0 z-10 bottom-10 right-32 rounded hover:shadow-[0px_0px_15px_5px_rgba(255,255,255,0.5)] hover:scale-105 duration-300"
          controls
          autoplay
          muted
          loop
        >
          <source src={TestimonioSergio} type="video/mp4" />
        </video>
        <video
          class="md:h-4/5 hidden md:block md:absolute mt-20 md:m-auto inset-0 top-10 left-32 hover:z-20 rounded hover:shadow-[0px_0px_15px_5px_rgba(255,255,255,0.5)] hover:scale-105 duration-300"
          controls
          autoplay
          muted
          loop
        >
          <source src={VideoEventoTengoUnPlan} type="video/mp4" />
        </video>
      </div>
    </div>
  </div>



  <div class="md:h-screen h-full w-full">
    <h3
      class="text-center font-extrabold text-3xl mt-24 hover:scale-110 duration-300"
    >
      <span class="text-primary">DAVID</span> TURU
    </h3>
    <div class="h-full w-full grid md:grid-cols-2 my-8 md:my-0">
      <div class="relative order-1 md:order-2 text-center">
        <div class="grid md:h-4/5">
          <div
            class="md:absolute w-2/3 md:w-1/3 inset-0 m-auto mt-8 mb-16 md:mb-0 md:mt-32 h-fit rounded-xl rotate-12 hover:z-10 hover:rotate-0 hover:shadow-[0px_0px_15px_5px_rgba(255,255,255,0.5)] hover:scale-105 duration-300"
          >
            <Image src={DavidTuru} alt="David Turu" class="rounded-xl" />
            <p
              class="text-center text-xl font-extrabold absolute top-10 mx-auto w-full drop-shadow-[0_35px_35px_rgba(0,0,0,0.25)]"
            >
              DAVID TURU
            </p>
          </div>
        </div>
        <button
          class="rounded-full w-72 h-16 m-auto font-bold before:ease relative overflow-hidden text-white shadow-[1px_3px_5px_0px_rgba(255,255,255,0.5)] hover:shadow-[0px_0px_10px_2px_rgba(255,255,255,0.5)] transition-all before:absolute before:right-0 before:top-0 before:h-16 before:w-4 before:translate-x-12 before:rotate-6 before:bg-white before:opacity-10 before:duration-700 hover:shadow-yellow-500 hover:before:-translate-x-72 bg-gradient-to-br from-yellow-500 to-orange-700 hover:scale-110"
          >RESERVA LLAMADA</button
        >
      </div>

      <div class="md:relative order-2 md:order-1">
        <video
            class="md:h-4/5 md:absolute mt-20 md:m-auto inset-0 z-10 top-10 left-32 rounded hover:shadow-[0px_0px_15px_5px_rgba(255,255,255,0.5)] hover:scale-105 duration-300"
            controls
            autoplay
            muted
            loop
          >
            <source src={TestimonioSergio} type="video/mp4" />
          </video>
          <video
            class="md:h-4/5 hidden md:block md:absolute mt-20 md:m-auto inset-0 bottom-10 right-32 hover:z-20 rounded hover:shadow-[0px_0px_15px_5px_rgba(255,255,255,0.5)] hover:scale-105 duration-300"
            controls
            autoplay
            muted
            loop
          >
            <source src={VideoEventoTengoUnPlan} type="video/mp4" />
          </video>
      </div>
    </div>
  </div>
</ContentSection>
